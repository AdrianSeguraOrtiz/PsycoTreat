{% include "administrativo/administrativo.html" %}
<html>
    <head>
        <title>Nuevo familiar</title>
        <link rel= "stylesheet" type= "text/css" href= "{{url_for('static', filename='styles/formulario.css')}}">
        {% if objetivo == 'añadir' %}
            <link rel= "stylesheet" type= "text/css" href= "{{url_for('static', filename='styles/formulario_añadir.css')}}">
        {% elif objetivo == 'editar' %}
            <link rel= "stylesheet" type= "text/css" href= "{{url_for('static', filename='styles/formulario_editar.css')}}">
        {% endif %}
        <h1>Nuevo familiar</h1>
    </head>
    <body>
        <form method="POST">
            <table>
                <tr>
                    <td><b>Nombre:</b></td>
                    <td><input type="text" name="nombre" value = "{{familiar['nombre']}}"></td>
                </tr>
                <tr>
                    <td><b>Apellidos:</b></td>
                    <td><input type="text" name="apellidos" value = "{{familiar['apellidos']}}"></td>
                </tr>
                <tr>
                    <td><b>Dni:</b></td>
                    <td><input type="text" name="dni" value = "{{familiar['dni']}}"></td>
                </tr>
                <tr>
                    <td><b>Fecha de nacimiento:</b></td>
                    <td><input type="date" name="fecha de nacimiento" value = "{{familiar['fecha_de_nacimiento']}}"></td>
                </tr>
                <tr>
                    <td><b>Sexo:</b></td>
                    {% if objetivo == 'añadir'%}
                        <td>
                            <input type="radio" name="sexo" value="Hombre"> Hombre
                            <input type="radio" name="sexo" value="Mujer"> Mujer
                        </td>
                    {% elif familiar['sexo'] == 'Mujer' %}
                        <td>
                            <input type="radio" name="sexo" value="Hombre"> Hombre
                            <input type="radio" name="sexo" value="Mujer" checked> Mujer
                        </td>
                    {% elif familiar['sexo'] == 'Hombre' %}
                        <td>
                            <input type="radio" name="sexo" value="Hombre" checked> Hombre
                            <input type="radio" name="sexo" value="Mujer"> Mujer
                        </td>
                    {% endif %}
                </tr>
                <tr>
                    <td><b>Email:</b></td>
                    <td><input type="email" name="email" value = "{{familiar['email']}}"></td>
                </tr>
                <tr>
                    <td><b>Telefono:</b></td>
                    <td><input type="tel" name="telefono" value = "{{familiar['telefono']}}"></td>
                </tr>
                <tr>
                    <td><b>Direccion:</b></td>
                    <td><input type="text" name="direccion" value = "{{familiar['direccion']}}"></td>
                </tr>
                <tr>
                    <td><b>CP:</b></td>
                    <td><input type="text" name="codigo postal" value = "{{familiar['codigo postal']}}"></td>
                </tr>
                <tr>
                    {% set provincias = ["Albacete", "Alicante", "Almería", "Araba", "Asturias", "Ávila", "Badajoz", "Barcelona", "Burgos", "Cáceres", "Cádiz", "Cantabria", "Castellón", "Ciudad Real", "Córdoba", "Cuenca", "Girona", "Gipuzkoa", "Granada", "Guadalajara", "Huelva", "Huesca", "Baleares", "Jaén", "La Rioja", "Las Palmas", "León", "Lérida", "Lugo", "Madrid", "Málaga", "Murcia", "Navarra", "Orense", "Palencia", "Pontevedra", "Salamanca", "Segovia", "Sevilla", "Soria", "Tarragona", "Santa Cruz de Tenerife", "Teruel", "Toledo", "Valencia", "Valladolid", "Vizcaya", "Zamora", "Zaragoza"] %}
                    <td><b>Provincia:</b></td>
                    <td>
                        <select name="provincia">
                        {% for provincia in provincias %}
                            <option value = {{provincia}}> {{provincia}} </option>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td><b>Localidad:</b></td>
                    <td><input type="text" name="localidad" value = "{{familiar['localidad']}}"></td>
                </tr>
                <tr>
                    <td><b>Fotografia:</b></td>
                    <td><input type="file" name="archivo" value = "{{familiar['fotografia']}}"></td>
                </tr>
                <tr>
                    <td><b>Paciente asociado:</b></td>
                    <td>
                        <select name="paciente">
                        {% for paciente in pacientes %}
                            <option value = "{{paciente['_id']}}"> {{paciente['nombre']}} {{paciente['apellidos']}} </option>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td><b>Relación:</b></td>
                    <td><input type="text" name="relacion" value = "{{familiar['relacion']}}"></td>
                </tr>
                <tr>
                    <td><b>Nivel de autorización:</b></td>
                    {% if objetivo == 'añadir'%}
                        <td>
                            <input type="radio" name="nivel autorizacion" value="Normal"> Normal
                            <input type="radio" name="nivel autorizacion" value="Parcial"> Parcial
                            <input type="radio" name="nivel autorizacion" value="Total"> Total
                        </td>
                    {% elif familiar['nivel de autorizacion'] == 'Normal' %}
                        <td>
                            <input type="radio" name="nivel autorizacion" value="Normal" checked> Normal
                            <input type="radio" name="nivel autorizacion" value="Parcial"> Parcial
                            <input type="radio" name="nivel autorizacion" value="Total"> Total
                        </td>
                    {% elif familiar['nivel de autorizacion'] == 'Parcial' %}
                        <td>
                            <input type="radio" name="nivel autorizacion" value="Normal"> Normal
                            <input type="radio" name="nivel autorizacion" value="Parcial" checked> Parcial
                            <input type="radio" name="nivel autorizacion" value="Total"> Total
                        </td>
                    {% elif familiar['nivel de autorizacion'] == 'Total' %}
                        <td>
                            <input type="radio" name="nivel autorizacion" value="Normal"> Normal
                            <input type="radio" name="nivel autorizacion" value="Parcial"> Parcial
                            <input type="radio" name="nivel autorizacion" value="Total" checked> Total
                        </td>
                    {% endif %}
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Limpiar">
                    </td>
                </tr>
            </table>
        </form>
    </body>
</html>
{% include "footer.html" %}